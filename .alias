#alias
alias v="nvim -u ~/.nvimrc"
alias vv="nvim -u ~/.nvimrc ./"
alias vvv="nvim -u ~/.nvimrc ~/.nvimrc"

alias l="eza --git -al --group-directories-first"

alias zshconfig="vim ~/dotfiles/.zshrc"

alias esa="eval $(ssh-agent)"
alias ixm="iex -S mix"
alias gs="git status"

alias ra="ranger"

alias fonts='fc-list : family style|sort'
alias gtoday='git --no-pager log --pretty=format:"%h%x09%an%x09%ad%x09%s" --since="8am"'
